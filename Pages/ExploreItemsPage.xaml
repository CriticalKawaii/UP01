<Page x:Class="UP01.Pages.ExploreItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UP01.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="1000"
      Title="Каталог товаров">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Background="#7FFF00"
                    Height="60"
                    >
            <TextBlock Text="Каталог товаров"
                       Style="{DynamicResource ResourceKey=Title}"
                       VerticalAlignment="Center"
                       Margin="20,0" />
        </StackPanel>

        <ListView Name="ListViewItems"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  HorizontalAlignment="Stretch"
                  BorderThickness="0"
                  Grid.Row="1"
                  Background="#FFFFFF"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Margin="10">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="4"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Margin="10,5"
                            Padding="15"
                            Width="900">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasBigDiscount}"
                                                 Value="True">
                                        <Setter Property="Background"
                                                Value="#2E8B57" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Background="White"
                                    CornerRadius="4"
                                    Width="160"
                                    Height="160"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Image Stretch="Uniform"
                                       Width="150"
                                       Height="150"
                                       Source="{Binding Photo,TargetNullValue='pack://application:,,,/Images/picture.png', FallbackValue='pack://application:,,,/Images/picture.png'}" />
                            </Border>


                            <StackPanel Grid.Column="1"
                                        Margin="15,0">
                                <WrapPanel>
                                    <TextBlock Text="{Binding Category}"
                                               FontWeight="Bold" />
                                    <TextBlock Text="|"
                                               FontWeight="Bold" />
                                    <TextBlock Text="{Binding Type}"
                                               FontWeight="Bold" />
                                </WrapPanel>

                                <TextBlock Text="{Binding Description, TargetNullValue='Нет описания', StringFormat='Описание: {0}'}"
                                           TextWrapping="Wrap" />
                                <TextBlock Text="{Binding Manufacturer, StringFormat='Производитель: {0}'}" />
                                <TextBlock Text="{Binding Supplier, StringFormat='Поставщик: {0}'}" />

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Цена: " />
                                    <TextBlock Text="{Binding Price}"
                                               Foreground="Red"
                                               TextDecorations="Strikethrough"
                                               Visibility="{Binding OldPriceVisibility}"/>
                                    <TextBlock Text="{Binding FinalPrice, StringFormat=' {0}₽'}" />
                                </StackPanel>

                                <TextBlock Text="{Binding Unit, StringFormat='Единица измерения: {0}'}" />
                                <TextBlock Text="{Binding Stock, StringFormat='В наличии на складе: {0}'}"
                                           FontFamily="Times New Roman"
                                           FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Stock}"
                                                             Value="0">
                                                    <Setter Property="Foreground"
                                                            Value="#87CEFA" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Left"
                                       Grid.Column="2"
                                       Text="{Binding Discount, StringFormat=' {0}%'}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
