<Page x:Class="UP01.Pages.EditItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UP01.Pages"
      mc:Ignorable="d"
      d:Background="White"
      Title="Добавление товара">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Добавление товара"
                       Style="{DynamicResource ResourceKey=Title}"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Артикул*"
                       Margin="0,5" />

            <TextBox x:Name="txtArticle"
                     Margin="0,0,0,10"
                     Padding="5"
                     Text="{Binding Article}" />

            <TextBlock Text="Наименование*"
                       Margin="0,5" />
            <ComboBox x:Name="cmbName"
                      SelectedItem="{Binding Type}"
                      Margin="0,0,0,10" />

            <TextBlock Text="Категория*"
                       Margin="0,5" />
            <ComboBox x:Name="cmbCategory"
                      SelectedItem="{Binding Category}"
                      Margin="0,0,0,10" />

            <TextBlock Text="Производитель*"
                       Margin="0,5" />
            <ComboBox x:Name="cmbManufacturer"
                      SelectedItem="{Binding Manufacturer}"
                      Margin="0,0,0,10" />

            <TextBlock Text="Поставщик*"
                       Margin="0,5" />
            <ComboBox x:Name="cmbSupplier"
                      SelectedItem="{Binding Supplier}"
                      Margin="0,0,0,10" />

            <TextBlock Text="Единица измерения*"
                       Margin="0,5" />
            <ComboBox x:Name="cmbUnit"
                      SelectedItem="{Binding Unit}"
                      Margin="0,0,0,10" />

            <TextBlock Text="Цена*"
                       FontSize="14"
                       Margin="0,5" />
            <TextBox x:Name="txtPrice"
                     Text="{Binding Price}"
                     Padding="5"
                     Margin="0,0,0,10" />

            <TextBlock Text="Скидка (%)"
                       FontSize="14"
                       Margin="0,5" />
            <TextBox x:Name="txtDiscount"
                     Text="{Binding Discount}"
                     Padding="5"
                     Margin="0,0,0,10" />

            <TextBlock Text="Количество на складе*"
                       Margin="0,5" />
            <TextBox x:Name="txtQuantity"
                     Text="{Binding Stock}"
                     Padding="5"
                     Margin="0,0,0,10" />

            <TextBlock Text="Описание"
                       Margin="0,5" />
            <TextBox x:Name="txtDescription"
                     Text="{Binding Description}"
                     Padding="5"
                     Height="60"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,10" />

            <TextBlock Text="Фото (имя файла)"
                       FontSize="14"
                       Margin="0,5" />
            <TextBox x:Name="txtPhoto"
                     Text="{Binding Photo}"
                     Padding="5"
                     Margin="0,0,0,20" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20">
                <Button x:Name="btnSave"
                        Content="Сохранить"
                        Width="120"
                        Height="35"
                        FontSize="14"
                        Background="#00FA9A"
                        Margin="0,0,10,0"
                        Click="btnSave_Click" />

            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
